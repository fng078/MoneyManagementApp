<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="SubActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wallet" />

        <Button
            android:id="@+id/button_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account" />

        <Button
            android:id="@+id/button_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/credit" />

        <Button
            android:id="@+id/button_decision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decision" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money"
            android:id="@+id/text_num"
            android:textSize="26sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="å††"
            android:id="@+id/textView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_7" />

        <Button
            android:id="@+id/button_num_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_8" />

        <Button
            android:id="@+id/button_num_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_9" />

        <Button
            android:id="@+id/button_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_4" />

        <Button
            android:id="@+id/button_num_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_5" />

        <Button
            android:id="@+id/button_num_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_1" />

        <Button
            android:id="@+id/button_num_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_2" />

        <Button
            android:id="@+id/button_num_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_num_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num_0" />

    </LinearLayout>
</LinearLayout>
